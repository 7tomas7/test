{% extends 'base.html.twig' %}
{% block title %} Home Page {% endblock %}
{% block body %}
    <div class="row text-center">
        <div class="col-md-12 top-form">
            <span class="text-form">
                Home - select action
            </span>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-10 col-md-offset-1">
            {% if app.user == false %}
                <a href="{{ url('register') }}" class="pull-left">  
                    Go to register
                </a>

                <a href="{{ url('login') }}" class="pull-right">  
                    Go to login
                </a>
            {% endif %}
        </div>
        {% if app.user %}
            <div class="col-md-10 col-md-offset-1">
                <a href="{{ url('logout') }}">  
                    Logout
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
